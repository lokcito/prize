<% layout('/layout/page') -%>
  <div class="row">
    <div class="col-12">  
      
      <div class="card mt-4">
        <h3 class="text-center card-header">Colegio: <%= prize.school %></h3>
        <div class="card-body">

          <h3 class="text-center">
            <% if (student) { %>
              Ganador: <%= student.getShortname %>.
            <% } else {  %>
              No hubo un ganador.
            <% } %>
          </h3>
        </div>
        <div class="card-footer">
          <h2 class="text-center">
            Sorteo llevado a cabo.
          </h2>
        </div>
      </div>
    </div>
  </div>
